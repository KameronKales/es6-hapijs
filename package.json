{
  "name": "hapijs-boilerplate",
  "version": "0.0.4",
  "description": "Another boring Hapi.js boilerplate written in ES6",
  "repository": {
    "type": "git",
    "url": "https://github.com/abiee/es6-hapijs.git"
  },
  "main": "server.js",
